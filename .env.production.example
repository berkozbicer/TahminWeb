# Copy this file to .env on production and fill values
APP_NAME=AtYarislari
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_KEY
APP_DEBUG=false
APP_URL=https://your-domain.example
APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_user
DB_PASSWORD=your_password

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
